<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E2F2EF"
    tools:context=".CardioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardio"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textSize="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/cardiotop"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_160sdp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_8sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move Faster, Live Longer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_145sdp"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/walking" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Walking"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold|normal"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_145sdp"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/jogginginplace"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jogging in Place"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold|normal"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_145sdp"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:backgroundTint="@color/white"
                        app:cardElevation="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/highknees" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High Knees"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold|normal"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_145sdp"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:backgroundTint="@color/white"
                        app:cardElevation="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/jumpingjacks"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumping Jacks"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold|normal"/>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_145sdp"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:backgroundTint="@color/white"
                        app:cardElevation="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/jumprope" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jump Rope"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold|normal"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_145sdp"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:backgroundTint="@color/white"
                        app:cardElevation="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/mountainclimbers"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mountain Climbers"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold|normal"/>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_145sdp"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:backgroundTint="@color/white"
                        app:cardElevation="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/skaters" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skaters"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold|normal"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_145sdp"
                        android:layout_height="@dimen/_160sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:backgroundTint="@color/white"
                        app:cardElevation="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/stepupss"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step Ups"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold|normal"/>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>



            </LinearLayout>


        </ScrollView>



    </LinearLayout>

</LinearLayout>