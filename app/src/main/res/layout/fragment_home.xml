<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E2F2EF"
    tools:context=".HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's Workout"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Together.."
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginLeft="@dimen/_13sdp"/>


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/topright"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_50sdp"/>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/search"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_6sdp"/>

                <EditText
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="match_parent"
                    android:hint=" Search"
                    android:layout_gravity="center"
                    android:id="@+id/Search"
                    android:textColorHint="@color/black"
                    android:background="@color/white"/>
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/mic"
                    android:layout_gravity="center"
                    android:id="@+id/Mic"
                    android:layout_marginLeft="@dimen/_10sdp"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_28sdp"
                    app:cardElevation="@dimen/_10sdp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ALL"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:textStyle="normal"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOGA"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="normal"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WEIGHTLIFTING"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="normal"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CARDIO"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="normal"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="center"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOME WORKOUT"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="normal"/>


                </androidx.cardview.widget.CardView>




            </LinearLayout>
        </HorizontalScrollView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_157sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/yoga"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOGA"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_157sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/weightlifiting"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIFITING"

                    android:layout_marginTop="@dimen/_28sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_157sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cardio"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARDIO"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"/>



            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_157sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_10sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/homeworkout"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WORKOUT"

                    android:layout_marginTop="@dimen/_28sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"/>


            </androidx.cardview.widget.CardView>


            </LinearLayout>



            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</LinearLayout>