<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E2F2EF"
    android:orientation="vertical"
    tools:context=".TadasanaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vruSteps"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tadasana"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:layout_gravity="center"
                android:textStyle="bold|normal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_70sdp"/>



            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_440sdp"
                android:layout_margin="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:src="@drawable/tadasana"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps : "
                        android:textSize="@dimen/_18sdp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-black"
                        android:layout_margin="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1) Starting Position :"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_marginLeft="@dimen/_8sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stand upright with your feet together and arms by your sides.
Distribute your weight evenly across both feet and keep your spine straight."
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2) Stretching Upward :"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_8sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inhale deeply and raise your arms overhead, interlocking your fingers with palms facing upward."
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3) Holding and Releasing :"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_8sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hold the pose for a few breaths while keeping your focus straight ahead."
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_marginRight="@dimen/_5sdp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>