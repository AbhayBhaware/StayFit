<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E2F2EF"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="@dimen/_140sdp"
       app:cardElevation="@dimen/_10sdp"
       android:backgroundTint="@color/white"
       app:cardCornerRadius="@dimen/_8sdp"
       android:layout_marginLeft="@dimen/_10sdp"
       android:layout_marginTop="@dimen/_8sdp"
       android:layout_marginRight="@dimen/_10sdp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

       <LinearLayout
           android:layout_width="@dimen/_120sdp"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="match_parent"
               android:layout_height="@dimen/_100sdp"
               android:layout_gravity="center"
               android:src="@drawable/profileimg"
               android:layout_marginTop="@dimen/_15sdp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Username"
               android:textColor="@color/black"
               android:textStyle="normal|italic"
               android:layout_gravity="center"
               android:textSize="@dimen/_15sdp"/>

       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_margin="@dimen/_10sdp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Weight :"
               android:textColor="@color/black"
               android:layout_gravity="center"
               android:textSize="@dimen/_20sdp"
               android:fontFamily="sans-serif-black"/>

           <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="60kg"
           android:textColor="@color/black"
               android:textStyle="italic"
           android:layout_gravity="center"
           android:textSize="@dimen/_20sdp"
           android:fontFamily="sans-serif-black"/>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hight :"
               android:textColor="@color/black"
               android:layout_gravity="center"
               android:textSize="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:fontFamily="sans-serif-black"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="5.9ft"
               android:textColor="@color/black"
               android:textStyle="italic"
               android:layout_gravity="center"
               android:textSize="@dimen/_20sdp"
               android:fontFamily="sans-serif-black"/>




       </LinearLayout>

       </LinearLayout>


   </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:cardElevation="@dimen/_10sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Profile"
            android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        app:cardElevation="@dimen/_10sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/share"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with friends"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/rateus"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate us"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/feedback"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>


            </LinearLayout>

        </LinearLayout>
   
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your fitness journey begins with a
            single step-keep moving forward, one workout at a time."
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textStyle="normal"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/_255sdp"
            android:drawableLeft="@drawable/quote"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have a Nice Day !!!"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"/>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="right"
        android:backgroundTint="@color/white"
        android:layout_marginRight="@dimen/_10sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"/>



    </androidx.cardview.widget.CardView>


</LinearLayout>