<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F2EF"
    android:orientation="vertical"
    tools:context=".TakeWeiHigActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Buddy"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="sans-serif-black"
        android:textColor="#01C99E"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_100sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:src="@drawable/profilepicc"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/profilepiccgirl"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_65sdp"
                android:text="Male"
                android:textColor="@color/black"
                android:textStyle="bold|normal"
                android:textSize="@dimen/_15sdp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_37sdp"
                android:text="Female"
                android:textColor="@color/black"
                android:textStyle="bold|normal"
                android:textSize="@dimen/_15sdp"/>


        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight : "
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_90sdp"
            android:textStyle="bold|normal"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:background="#00000000"
                android:id="@+id/weEdit"
                android:textColorHint="@color/black"
                android:inputType="number"
                android:hint="00.00KG"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hight    : "
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_90sdp"
            android:textStyle="bold|normal"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:backgroundTint="@color/white"
            app:cardElevation="@dimen/_8sdp">

            <EditText
                android:id="@+id/hiEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="#00000000"
                android:hint="00.00CM"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_38sdp"
        android:backgroundTint="#01C99E"
        android:text="ENTER"
        android:id="@+id/enterBu"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center"
        android:textStyle="bold|normal"/>



</LinearLayout>